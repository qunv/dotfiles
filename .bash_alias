#!/bin/bash

alias s=source

git_current_branch() {
  local ref
  ref=$(command git symbolic-ref --quiet HEAD 2>/dev/null)
  local ret=$?
  if [[ $ret != 0 ]]; then
    [[ $ret == 128 ]] && return
    ref=$(command git rev-parse --short HEAD 2>/dev/null) || return
  fi
  echo ${ref#refs/heads/}
}

nv() {
  if [[ -n "$1" ]]; then
    nvim "$1"
  else
    local drr
    drr=$(fd --type d | fzf)
    nvim "$drr"
  fi
}

